{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./mvnw clean package -DskipTests",
    "watchPatterns": ["**/*.java", "**/*.xml", "**/*.properties"]
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -Dserver.address=0.0.0.0 -jar target/garden-university-system-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
