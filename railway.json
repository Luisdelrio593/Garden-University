{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./mvnw clean package -DskipTests -Dmaven.test.skip=true"
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -Dserver.address=0.0.0.0 -Dspring.profiles.active=prod -Xmx512m -jar target/garden-university-system-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
